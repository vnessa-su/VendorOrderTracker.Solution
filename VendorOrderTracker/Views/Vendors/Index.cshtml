@using VendorOrderTracker.Models;

@{
  Layout = "_Layout";
}

<h1 class="py-3">Vendors</h1>

<div class="page-content container rounded py-3 px-4">
  @if(Model.Count == 0)
  {
    <p class="text-warning">No vendors have been added yet!</p>
  }

  <ul class="list-group list-group-flush">
    @foreach (Vendor vendor in Model.Values)
    {
      <li class="list-group-item bg-transparent"><a class="vendor-link" href="/vendors/@vendor.Id">@vendor.Name</a></li>
    }
  </ul>
  
</div>

<div class="text-center">
  <a class="btn btn-secondary btn-lg m-2" href="/vendors/new">Add Vendor</a>
  <a class="btn btn-secondary btn-lg m-2" href="/">Back Home</a>
</div>